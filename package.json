{
  "name": "audit-tracker",
  "displayName": "AuditTracker",
  "description": "Track code audit progress by marking files in scope and tracking function review status",
  "version": "0.4.0",
  "publisher": "nisedo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nisedo/audit-tracker"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "audit",
    "security",
    "code review",
    "solidity",
    "smart contracts",
    "web3",
    "blockchain"
  ],
  "activationEvents": [
    "onView:auditTracker.scopeView",
    "onCommand:auditTracker.addToScope",
    "onCommand:auditTracker.removeFromScope",
    "onCommand:auditTracker.markRead",
    "onCommand:auditTracker.unmarkRead",
    "onCommand:auditTracker.markReviewed",
    "onCommand:auditTracker.unmarkReviewed",
    "onCommand:auditTracker.filterFunctions",
    "onCommand:auditTracker.clearFunctionFilter",
    "onCommand:auditTracker.refresh",
    "onCommand:auditTracker.goToFunction",
    "onCommand:auditTracker.clearAllState",
    "onCommand:auditTracker.loadScopeFile",
    "onCommand:auditTracker.markEntrypoint",
    "onCommand:auditTracker.unmarkEntrypoint",
    "onCommand:auditTracker.markAdmin",
    "onCommand:auditTracker.unmarkAdmin",
    "onCommand:auditTracker.hideFunction",
    "onCommand:auditTracker.showHiddenFunctions",
    "onCommand:auditTracker.showProgressReport",
    "workspaceContains:SCOPE.txt",
    "workspaceContains:SCOPE.md",
    "workspaceContains:.vscode/*-audit-tracker.json"
  ],
  "main": "./out/extension.js",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "AuditTracker requires a trusted workspace because it reads and writes tracking data under the workspaceâ€™s .vscode directory."
    }
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "audit-tracker",
          "title": "AuditTracker",
          "icon": "$(checklist)"
        }
      ]
    },
    "views": {
      "audit-tracker": [
        {
          "id": "auditTracker.scopeView",
          "name": "Functions"
        }
      ]
    },
    "commands": [
      {
        "command": "auditTracker.addToScope",
        "title": "AuditTracker: Add to Scope"
      },
      {
        "command": "auditTracker.removeFromScope",
        "title": "AuditTracker: Remove from Scope"
      },
      {
        "command": "auditTracker.markRead",
        "title": "Mark as Read",
        "icon": "$(eye)"
      },
      {
        "command": "auditTracker.unmarkRead",
        "title": "Mark as Unread"
      },
      {
        "command": "auditTracker.markReviewed",
        "title": "Mark as Reviewed",
        "icon": "$(check)"
      },
      {
        "command": "auditTracker.unmarkReviewed",
        "title": "Unmark Reviewed"
      },
      {
        "command": "auditTracker.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "auditTracker.goToFunction",
        "title": "Go to Function"
      },
      {
        "command": "auditTracker.clearAllState",
        "title": "AuditTracker: Clear All Tracking State"
      },
      {
        "command": "auditTracker.loadScopeFile",
        "title": "AuditTracker: Load Scope File"
      },
      {
        "command": "auditTracker.markEntrypoint",
        "title": "Mark as Entrypoint"
      },
      {
        "command": "auditTracker.unmarkEntrypoint",
        "title": "Unmark Entrypoint"
      },
      {
        "command": "auditTracker.markAdmin",
        "title": "Mark as Admin"
      },
      {
        "command": "auditTracker.unmarkAdmin",
        "title": "Unmark Admin"
      },
      {
        "command": "auditTracker.hideFunction",
        "title": "Hide Function"
      },
      {
        "command": "auditTracker.showHiddenFunctions",
        "title": "Show Hidden Functions"
      },
      {
        "command": "auditTracker.showProgressReport",
        "title": "AuditTracker: Show Progress Report"
      },
      {
        "command": "auditTracker.filterFunctions",
        "title": "AuditTracker: Filter Functions",
        "icon": "$(filter)"
      },
      {
        "command": "auditTracker.clearFunctionFilter",
        "title": "AuditTracker: Clear Function Filter",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "auditTracker.addToScope",
          "group": "audit@1",
          "when": "resourceScheme == file"
        },
        {
          "command": "auditTracker.removeFromScope",
          "group": "audit@2",
          "when": "resourceScheme == file"
        }
      ],
      "view/title": [
        {
          "command": "auditTracker.filterFunctions",
          "when": "view == auditTracker.scopeView",
          "group": "navigation@1"
        },
        {
          "command": "auditTracker.clearFunctionFilter",
          "when": "view == auditTracker.scopeView && auditTracker.filtersActive",
          "group": "navigation@2"
        },
        {
          "command": "auditTracker.refresh",
          "when": "view == auditTracker.scopeView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "auditTracker.markRead",
          "when": "view == auditTracker.scopeView && viewItem =~ /^functionUnread/",
          "group": "inline@1"
        },
        {
          "command": "auditTracker.markRead",
          "when": "view == auditTracker.scopeView && viewItem =~ /^functionUnread/",
          "group": "audit@1"
        },
        {
          "command": "auditTracker.markReviewed",
          "when": "view == auditTracker.scopeView && viewItem =~ /^functionRead/",
          "group": "inline@1"
        },
        {
          "command": "auditTracker.unmarkRead",
          "when": "view == auditTracker.scopeView && viewItem =~ /^functionRead/",
          "group": "audit@1"
        },
        {
          "command": "auditTracker.markReviewed",
          "when": "view == auditTracker.scopeView && viewItem =~ /^functionRead/",
          "group": "audit@2"
        },
        {
          "command": "auditTracker.unmarkReviewed",
          "when": "view == auditTracker.scopeView && viewItem =~ /^functionReviewed/",
          "group": "audit@1"
        },
        {
          "command": "auditTracker.removeFromScope",
          "when": "view == auditTracker.scopeView && viewItem == file",
          "group": "audit@1"
        },
        {
          "command": "auditTracker.markEntrypoint",
          "when": "view == auditTracker.scopeView && viewItem =~ /^function/ && viewItem =~ /^(?!.*Entrypoint)/",
          "group": "entrypoint@1"
        },
        {
          "command": "auditTracker.unmarkEntrypoint",
          "when": "view == auditTracker.scopeView && viewItem =~ /Entrypoint/",
          "group": "entrypoint@1"
        },
        {
          "command": "auditTracker.markAdmin",
          "when": "view == auditTracker.scopeView && viewItem =~ /^function/ && viewItem =~ /^(?!.*Admin)/",
          "group": "admin@1"
        },
        {
          "command": "auditTracker.unmarkAdmin",
          "when": "view == auditTracker.scopeView && viewItem =~ /Admin/",
          "group": "admin@1"
        },
        {
          "command": "auditTracker.hideFunction",
          "when": "view == auditTracker.scopeView && viewItem =~ /^function/",
          "group": "visibility@1"
        },
        {
          "command": "auditTracker.showHiddenFunctions",
          "when": "view == auditTracker.scopeView && viewItem == file",
          "group": "visibility@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  }
}
